{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "ES2020",
    "esModuleInterop": true,
    "paths": {
      "@types/*": ["./src/types/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@middlewares/*": ["./src/middlewares/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
