{
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES2020",
    "declaration": true,
    "declarationMap": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "@types/*": ["./src/types/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@middlewares/*": ["./src/middlewares/*"]
    }
  },
  "include": ["src/**/*", "src/database/**/*", "src/views/**/*"],
  "exclude": ["node_modules", "tests"]
}
